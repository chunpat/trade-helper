# Application Settings
APP_NAME=trade-helper
ENVIRONMENT=development
DEBUG=True
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:8030

# Monitoring Settings
ENABLE_METRICS=True
PROMETHEUS_METRICS_PORT=9090
GRAFANA_PASSWORD=admin
NODE_EXPORTER_PORT=9100
MYSQL_EXPORTER_PORT=9104
REDIS_EXPORTER_PORT=9121

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=trade_helper
DB_CHARSET=utf8mb4

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Settings
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Exchange API Settings
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
# Market data poll interval (seconds)
MARKET_POLL_INTERVAL=10

# Risk Control Settings
MAX_LEVERAGE=20
MAX_POSITION_VALUE=1000000
RISK_RATIO_THRESHOLD=0.8
MAX_SINGLE_ORDER=100000
PRICE_DEVIATION_LIMIT=0.05
ORDER_FREQUENCY_LIMIT=10
MAX_DAILY_LOSS=50000
RISK_LEVEL_THRESHOLD=0.9

# Alert Settings
ENABLE_EMAIL_ALERTS=True
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ALERT_RECIPIENTS=admin@example.com

# Webhook Settings
ENABLE_WEBHOOK_ALERTS=True
WEBHOOK_URL=https://your-webhook-url
WEBHOOK_SECRET=your-webhook-secret

# Telegram Bot Settings
ENABLE_TELEGRAM_ALERTS=False
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Enterprise WeChat Settings
ENABLE_WECHAT_ALERTS=False
WECHAT_CORP_ID=your-corp-id
WECHAT_AGENT_ID=your-agent-id
WECHAT_CORP_SECRET=your-corp-secret

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=/var/log/trade-helper
ENABLE_ELK_LOGGING=False
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Frontend Settings
VUE_APP_API_URL=http://localhost:8029/api/v1
VUE_APP_WEBSOCKET_URL=ws://localhost:8029/ws
VUE_APP_ENABLE_MOCK=False

# Performance Settings
ENABLE_REDIS_CACHE=True
REDIS_CACHE_EXPIRE=3600
ENABLE_RATE_LIMIT=True
RATE_LIMIT_PER_MINUTE=60
